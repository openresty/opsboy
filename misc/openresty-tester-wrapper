#!/bin/sh

set -x

rootdir=/home/ec2-user
exec=$rootdir/openresty-tester.pl
user=ec2-user
logfile=$rootdir/openresty-tester.log
args="$@"
run='su --session-command='
name=ortest_`date +'%Y%m%d-%H%M%S'`_`hostname`
logfile2=/tmp/$name.log
mlog=$rootdir/ortest.log
echo > $mlog

branch=$(echo $args|sed -n 's/^.*\bopsboy_branch=\(.*\)/\1/p'|awk '{print $1}')
if [ -n "$branch" ]; then
    sudo -u ec2-user git -C "$rootdir/git/opsboy" reset --hard \
        && sudo -u ec2-user git -C "$rootdir/git/opsboy" fetch origin "$branch" \
        && sudo -u ec2-user git -C "$rootdir/git/opsboy" checkout "$branch" \
        && sudo -u ec2-user git -C "$rootdir/git/opsboy" reset --hard "origin/$branch" \
        && make -C "$rootdir/git/opsboy" -j2
fi

#$run"whoami > $logfile 2>&1" $user
$run"(echo -n 'DATE '; TZ=GMT date +'%Y-%m-%d %H:%M:%S') > $logfile 2>&1" $user
$run"(echo -n 'ARCH '; uname -a) >> $logfile 2>&1" $user
$run"PATH=$PATH $exec make -k --git-pull $args >> $logfile 2>&1" $user

$run"cp $logfile $logfile2 2>&1 | tee -a $mlog" $user
$run"cd /tmp && tar -czf $name.tar.gz $name.log 2>&1 | tee -a $mlog" $user
$run"PATH=$PATH $rootdir/ortest-upload /tmp/$name.tar.gz 2>&1 | tee -a $mlog" $user
$run"cd /tmp && rm -f $name.log $name.tar.gz" $user

# shutdown cmd will prevent ssh from login
sleep 180

# allow user to cancel via the `sudo shutdown -c`
shutdown -P +3
#shutdown -P now

